<h1>To Do List</h1>
<hr />
<h2>Tasks:</h2>

<form action="/tasks" method = "post">
<a href="/tasks"><button type="submit" name="buttonSortType" value="DueDate">Due date</button></a>
<a href="/tasks"><button type="submit" name="buttonSortType" value="Description">Description</button></a>
</form>

@if (Model.Count != 0)
{
  <ul>
    @foreach (var task in Model)
    {
      <li><a href='/tasks/@task.GetId()'>Name : @task.GetDescription()</a>
      <p>DueDate : @task.GetDueDate()</p>
      <p>Completed : @task.GetCompleted()</p>
      </li>
    }
  </ul>
}
<h4><a href="/tasks/new">Add new task</a></h4>
<h4><a href="/">Return home</a></h4>
